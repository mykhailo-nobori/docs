{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Nobori.ai - Docs",
  "colors": {
    "primary": "#FF5E00",
    "light": "#FF833D",
    "dark": "#CC4B00"
  },
  "favicon": "/nobori-favicon-dark-32.png",
  "logo": {
    "light": "/logo/nobori-logo-light (2).png",
    "dark": "/logo/nobori-logo-dark (2).png"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get started",
            "pages": ["index", "quickstart", "development"]
          },
          {
            "group": "Features",
            "pages": ["essentials/settings", "essentials/navigation"]
          },
          {
            "group": "Metrics",
            "pages": ["essentials/markdown", "essentials/code", "essentials/images", "essentials/reusable-snippets"]
          }
        ]
      },
      {
        "tab": "API",
        "hidden": true,
        "groups": [
          {
            "group": "Overview",
            "pages": ["api/overview"]
          },
          {
            "group": "Coming Soon",
            "pages": ["api/status", "api/webhooks"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        { "anchor": "Website", "href": "https://nobori.ai", "icon": "globe" },
        { "anchor": "App", "href": "https://app.nobori.ai", "icon": "square-arrow-up-right" },
        { "anchor": "Changelog", "href": "https://nobori.ai/changelog", "icon": "megaphone" }
      ]
    }
  },
  "navbar": {
    "links": [
      { "label": "Support", "href": "mailto:support@nobori.ai" }
    ],
    "primary": {
      "type": "button",
      "label": "Go to Dashboard",
      "href": "https://app.nobori.ai"
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/nobori_ai",
      "linkedin": "https://linkedin.com/company/nobori"
    }
  }
}
